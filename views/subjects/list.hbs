{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Felvett tárgyaim</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Tárgynév</th>
            <th>Kreditérték</th>
            <th>Helyszín</th>
            <th>Leírás</th>
        </tr>   
    </thead>
    <tbody>
        {{#each subjects}}
                <tr>
                    <td>{{date}}</td>
                    <td>{{subjectname}}</td>
                    <td>{{credit}}</td>
                    <td>{{location}}</td>
                    <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
                    <td><a class="btn btn-primary btn-sm" href="/subjects/edit/{{id}}" role="button">Módosítás</a></td>
                    <td><a class="btn btn-danger btn-sm" href="/subjects/delete/{{id}}" role="button">Törlés</a></td>
                </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/subjects/new" class="btn btn-default">Új tárgy felvétele</a></p>